mixin header(prev,next)
	.header__container.visually-hidden(class!=attributes.class) 
		header.header
			a.logo.href(href="/index.html") 
				|Mythril 
				br
				|Studio 
			nav.nav 
				ul.nav__list 
					li.nav__item 
						a.nav__link.href(href="./services.html") Services
					li.nav__item 
						a.nav__link.href(href="./nft.html") NFT
					li.nav__item 
						a.nav__link.href(href="./jobs.html") Jobs
					li.nav__item 
						a.nav__link.href(href="./about.html") About
					li.nav__item 
						a.nav__link.href(href="./contacts.html") Contacts
			.nav-mobile
				a.nav-mobile__item(href=prev)
					+icon("#arrow")(class="nav-mobile__icon")
					|prev
				a.nav-mobile__item.nav-mobile__item--reversed(href=next)
					+icon("#arrow")(class="nav-mobile__icon")
					|next
				button.nav-mobile__button
					span
		ul.nav__list.nav-mobile__list 
			li.nav__item 
				a.nav__link(href="./services.html") Services
			li.nav__item 
				a.nav__link(href="./nft.html") NFT
			li.nav__item 
				a.nav__link(href="./jobs.html") Jobs
			li.nav__item 
				a.nav__link(href="./about.html") About
			li.nav__item 
				a.nav__link(href="./contacts.html") Contacts
		.header__bottom 
			ul.network 
				li.network__item
					a.network__link(href="") 
						+icon("#behance")
				li.network__item
					a.network__link(href="")
						+icon("#linkedin") 
				li.network__item
					a.network__link(href="")
						+icon("#dribble") 
				li.network__item
					a.network__link(href="")
						+icon("#instagram") 
				li.network__item
					a.network__link(href="")
						+icon("#twitter") 
			a(href="#").header__mail info@mythril.space

