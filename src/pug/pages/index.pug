extends ../_layout.pug
block content
	+header("#","./services.html")(class="hero__header")
	main.page
		section.hero
			h1.visually-hidden Nft studio art
			.hero__body 
				.hero-gallery
					.swiper-wrapper 
						.swiper-slide.hero-gallery__item
							.hero-title__item NFT Studio art
							img(src="./img/hero/1.jpg" alt="nft")
						.swiper-slide.hero-gallery__item
							.hero-title__item NFT Studio art
							img(src="./img/hero/2.jpg" alt="nft")
						.swiper-slide.hero-gallery__item
							.hero-title__item NFT Studio art
							img(src="./img/hero/3.jpg" alt="nft")
			.hero__footer.container 
				ul.network.hero__network 
					li.network__item
						a.network__link(href="") 
							i.bx.bxl-behance
					li.network__item
						a.network__link(href="")
							i.bx.bxl-facebook
					li.network__item
						a.network__link(href="")
							i.bx.bxl-twitter
					li.network__item
						a.network__link(href="")
							i.bx.bxl-instagram
					li.network__item
						a.network__link(href="")
							i.bx.bxl-linkedin
				p.hero__about 
					|We are a studio that develops and creates digital art.
			a(href="./services.html").hero__next.href
					i.bx.bxs-down-arrow
					|next 
